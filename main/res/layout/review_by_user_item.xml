<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">


    <ImageView
        android:id="@+id/review_by_user_item_image"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:src="@drawable/brahmi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/review_by_user_item_image"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_by_user_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/review_by_user_item_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:text="Example text"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/review_by_user_item_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressBackgroundTint="@android:color/holo_red_dark"
                android:progressTint="@android:color/holo_red_dark"
                android:secondaryProgressTint="@android:color/holo_red_dark"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/review_by_user_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:text="Example text"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fb_icon"
            android:orientation="vertical"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/review_by_user_item_reaction"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginRight="25dp"
                android:foreground="@drawable/round_outline"
                android:scaleType="centerInside"
                android:src="@drawable/brahmi"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>