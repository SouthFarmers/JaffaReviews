<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/review_item_border"



    android:layout_marginRight="10dp">


    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:foreground="@drawable/round_outline"
        android:src="@drawable/brahmi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fb_icon"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reviewer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:text="date"
                android:textSize="12sp" />

            <!--<RatingBar-->
                <!--android:id="@+id/reviewer_rating"-->
                <!--style="?android:attr/ratingBarStyleSmall"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:numStars="5"-->
                <!--android:progressBackgroundTint="@android:color/holo_red_dark"-->
                <!--android:progressTint="@android:color/holo_red_dark"-->
                <!--android:secondaryProgressTint="@android:color/holo_red_dark"-->
                <!--android:stepSize="0.5" />-->

            <TextView
                android:id="@+id/reviewer_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:text="Example text"
                android:textColor="@color/com_facebook_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reviewer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:text="Example text"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/gifView"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="90dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fb_icon"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/reviewer_reaction"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:foreground="@drawable/round_outline"
                android:scaleType="centerInside"
                android:src="@drawable/heart"/>

            <TextView
                android:id="@+id/reviewer_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="3/5"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>