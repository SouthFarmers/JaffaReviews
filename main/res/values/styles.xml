<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FollowButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>



    <style name="CardStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.Home">
        <item name="contentPaddingBottom">@dimen/content_spacing_vertical</item>
        <item name="contentPaddingLeft">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingRight">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingTop">@dimen/content_spacing_vertical</item>
        <item name="android:layout_marginBottom">@dimen/view_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginRight">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginTop">@dimen/view_spacing_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FullScreenDialogToolbar" parent="Widget.AppCompat.Toolbar" />




    <style name="AnimLeft">
        <item name="android:windowEnterAnimation">@anim/from_left</item>
        <item name="android:windowExitAnimation">@anim/to_left</item>
    </style>

    <style name="AnimRight">
        <item name="android:windowEnterAnimation">@anim/from_right</item>
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>

    <style name="AnimUp">
        <item name="android:windowEnterAnimation">@anim/from_up</item>
        <item name="android:windowExitAnimation">@anim/to_up</item>
    </style>

    <style name="AnimDown">
        <item name="android:windowEnterAnimation">@anim/from_down</item>
        <item name="android:windowExitAnimation">@anim/to_down</item>
    </style>

    <style name="AnimLeftRight">
        <item name="android:windowEnterAnimation">@anim/from_left</item>
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>

    <style name="AnimUpDown">
        <item name="android:windowEnterAnimation">@anim/from_up</item>
        <item name="android:windowExitAnimation">@anim/to_down</item>
    </style>

    <style name="AnimFadeInOut">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AnimZoomInOut">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>
